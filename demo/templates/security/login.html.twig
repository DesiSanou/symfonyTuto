{% extends 'base.html.twig' %}

{% block body   %}

  <h1>Connexion</h1>

  <form action="{{ path('security_login')}}" method="post">
  	<div class="form-group">
  		<input type="email" class="form-control" name="_username" required placeholder="Entrer le nom d'utilisateur">
  	</div>
  	<div class="form-group">
  		<input type="password" class="form-control" name="_password" required placeholder="Entrer le mot de pass">
  	</div>

  	<div class="form-group">
  		<button type="submit" class="btn btn-success">Se connecter</button>
  	</div>
  </form>

{% endblock  %}